              "index",
              "quickstart"
            ]
          },
          {
            "group": "Funcionalidades",
            "pages": [
              "auth",
              "gerar-qrcode-pix",
              "pagamento-pix",
              "wallet",
              "webhooks"
            ]
          },
          {
            "group": "Pagamentos",
            "pages": [
              "gerar-qrcode-pix",
              "pagamento-pix"
            ]
          }
        ]
      },
      {
        "tab": "Referência de API",
        "groups": [
          {
            "group": "Endpoints v1",
            "pages": [
              "reference/gateway",
              "reference/wallet"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Status da API",
          "href": "https://status.seu-dominio.com",
          "icon": "signal-bars"
        }
      ]
    }
  },

  "logo": {
    "light": "/logo/logodark.png",
    "dark": "/logo/logolight.png"
  },

